<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="15dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Category"
        style="@style/colorText"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEditCategoryId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="5"
        android:textColorHint="#dadad8"
        app:counterTextAppearance="@style/counterTextApprearance">
        <EditText
            android:id="@+id/edEditCategoryId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category ID"
            style="@style/colorText"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEditCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        android:textColorHint="#dadad8"
        app:counterTextAppearance="@style/counterTextApprearance">
        <EditText
            android:id="@+id/edEditCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name"
            style="@style/colorText"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEditCategoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="255"
        android:textColorHint="#dadad8"
        app:counterTextAppearance="@style/counterTextApprearance">
        <EditText
            android:id="@+id/edEditCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Description"
            style="@style/colorText"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEditCategoryPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        android:textColorHint="#dadad8"
        app:counterMaxLength="5"
        app:counterTextAppearance="@style/counterTextApprearance">
        <EditText
            android:id="@+id/edEditCategoryPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Position"
            style="@style/colorText"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>