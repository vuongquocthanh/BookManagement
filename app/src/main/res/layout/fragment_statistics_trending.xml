<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_below="@+id/toolbarInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tliFindTrending"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edFindTrending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/findTrending"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btFindTrending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/find"
            android:background="@color/background_Button"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <!--<TextView-->
        <!--android:id="@+id/tvNotification"-->
        <!--style="@style/colorText"-->
        <!--android:textSize="25sp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewBookTrending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>