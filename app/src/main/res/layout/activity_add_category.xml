<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddCategoryActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAddCategory"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">
    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addCategory"
            style="@style/colorText"
            android:textSize="30sp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCategoryId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="5"
            android:textColorHint="#dadad8"
            app:counterTextAppearance="@style/counterTextApprearance">
            <EditText
                android:id="@+id/edCategoryId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category ID"
                style="@style/colorText"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            android:textColorHint="#dadad8"
            app:counterTextAppearance="@style/counterTextApprearance">
            <EditText
                android:id="@+id/edCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category Name"
                style="@style/colorText"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="255"
            android:textColorHint="#dadad8"
            app:counterTextAppearance="@style/counterTextApprearance">
            <EditText
                android:id="@+id/edCategoryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category Description"
                style="@style/colorText"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCategoryPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:textColorHint="#dadad8"
            app:counterMaxLength="5"
            app:counterTextAppearance="@style/counterTextApprearance">
            <EditText
                android:id="@+id/edCategoryPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category Position"
                style="@style/colorText"/>
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/imgCategoryAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/gallery1"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btChooseImageCategory"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/background_Button"
            android:text="Choose Image"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_foldersvg"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/btCategorySave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAVE"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/background_Button"/>
            <Button
                android:id="@+id/btCategoryCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/background_Button"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>